    "    },\n",
    "]\n",
    "\n",
    "# Lower temperature → more deterministic answer\n",
    "response_temp_0 = client.responses.create(\n",
    "    model=MODEL,\n",
    "    input=messages,\n",
    "    temperature=0.0,\n",
    "    max_output_tokens=80,\n",
