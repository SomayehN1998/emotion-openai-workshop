    "# Cell 1-1: Simple example with system/user roles and temperature\n",
    "# ============================================\n",
    "\n",
    "messages = [\n",
    "    {\n",
    "        \"role\": \"system\",\n",
    "        \"content\": (\n",
    "            \"You are an assistant that explains concepts in simple Persian \"\n",
