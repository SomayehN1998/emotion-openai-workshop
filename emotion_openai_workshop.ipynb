    "# Higher temperature → more diverse answer\n",
    "response_temp_1 = client.responses.create(\n",
    "    model=MODEL,\n",
    "    input=messages,\n",
    "    temperature=1.0,\n",
    "    max_output_tokens=80,\n",
    ")\n",
    "\n",
