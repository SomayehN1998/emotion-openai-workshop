    "# ============================================\n",
    "# Cell 4-1: Helpers for label extraction and metrics\n",
    "# ============================================\n",
    "\n",
    "import re\n",
    "from sklearn.metrics import accuracy_score, classification_report\n",
    "\n",
    "valid_labels = list(label2id.keys())  # ['sadness', 'joy', ...]\n",
    "\n",
    "\n",
    "def extract_label_from_text(text: str) -> str:\n",
    "    \"\"\"\n",
    "    Try to extract one of the valid emotion labels from model free-text output.\n",
    "    \"\"\"\n",
    "    if text is None:\n",
    "        return \"sadness\"  # fallback\n",
    "\n",
    "    lower = text.lower()\n",
    "\n",
    "    # First try: direct substring match\n",
    "    for lbl in valid_labels:\n",
    "        if lbl in lower:\n",
    "            return lbl\n",
    "\n",
    "    # Second try: look at first word after cleaning punctuation\n",
    "    first_word = re.split(r\"\\s+\", lower.strip())[0]\n",
    "    first_word = re.sub(r\"[^\\w]\", \"\", first_word)\n",
    "    if first_word in valid_labels:\n",
    "        return first_word\n",
    "\n",
    "    # Fallback: return a default label (will hurt accuracy, but keeps length consistent)\n",
    "    return \"sadness\"\n",
    "\n",
    "\n",
    "def evaluate_predictions(name: str, y_true, y_pred):\n",
    "    \"\"\"\n",
    "    Print accuracy and classification report for a given strategy.\n",
    "    \"\"\"\n",
    "    print(f\"\\n==== {name} ====\\n\")\n",
    "    acc = accuracy_score(y_true, y_pred)\n",
    "    print(f\"Accuracy: {acc:.3f}\\n\")\n",
    "    print(classification_report(y_true, y_pred, digits=3))"
   ]
